{
  "name": "monaghans-midnight-smash",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && next build",
    "postinstall": "npx prisma generate",
    "start": "next start",
    "lint": "eslint",
    "status": "tsx scripts/update-status.ts",
    "bootstrap": "tsx scripts/bootstrap.ts",
    "verify-env": "tsx scripts/verify-env.ts",
    "predev": "npm run verify-env",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:variants": "playwright test --config=playwright.variants.config.ts",
    "test:e2e:variants:ui": "playwright test --config=playwright.variants.config.ts --ui",
    "test:variants": "jest tests/unit/variant-system.test.ts",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --collect.url=http://localhost:3000",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "setup:production": "tsx scripts/setup-production.ts",
    "db:migrate": "prisma migrate deploy",
    "db:seed:old": "tsx scripts/create-monaghans-site.ts && tsx scripts/add-monaghans-domain.ts",
    "backup:create": "tsx scripts/backup-cli.ts create",
    "backup:list": "tsx scripts/backup-cli.ts list",
    "backup:restore": "tsx scripts/backup-cli.ts restore",
    "backup:latest": "tsx scripts/backup-cli.ts latest",
    "disaster-drill": "tsx scripts/disaster-drill.ts",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force && npm run db:seed"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@aws-sdk/client-s3": "^3.892.0",
    "@aws-sdk/s3-request-presigner": "^3.892.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@ncdai/react-wheel-picker": "^1.0.17",
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "commander": "^13.1.0",
    "next": "15.5.3",
    "next-auth": "^4.24.11",
    "prisma": "^6.16.2",
    "react": "19.1.0",
    "react-date-wheel-picker": "^0.1.12",
    "react-day-picker": "^9.11.0",
    "react-dom": "19.1.0",
    "react-time-picker-input": "^2.2.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}
